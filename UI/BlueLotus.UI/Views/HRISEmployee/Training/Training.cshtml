    ViewBag.Title = "Training";
    Layout = "~/Views/Shared/_LayOutWithLatestKendoScript.cshtml";

}
<link rel="stylesheet" href="~/buttncss/style/cssNew.css" type="text/css" />

<div>
    <div class="k-content clearfix" id="filterCont">

        <div class="col-md-12 control-icons" id="ButtonSet">

            <button class="control-button save" onclick="SaveUpdate('save') " data-tooltip="Save"> </button>
            <button class="control-button save_and_new" onclick="SaveUpdate('saveandnew')" data-tooltip="Save And New"> </button>
            <button class="control-button update" onclick="SaveUpdate('Update')" data-tooltip="Update"> </button>
            <button class="control-button cancel" onclick="clearfunction()" data-tooltip="Cancel"> </button>

        </div>
        <div id="HdrPart">
            <div>
                @Html.Partial("~/Views/HRISEmployee/GetEmp.cshtml")
            </div>
            <div>
                @Html.Partial("~/Views/HRISEmployee/EmpGetDet.cshtml")
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="wr_formGroup">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <label>Programme:</label>
                            </div>
                            <div class="col-md-6 col-sm-8 ">
                                <input placeholder="Programme" id="programme" type="text" class="k-textbox" />

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <label>Institute:</label>
                            </div>
                            <div class="col-md-6 col-sm-8 ">
                                <input placeholder="Institute" id="trainingInstitute" type="text" class="k-textbox" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <label>Instructor:</label>
                            </div>
                            <div class="col-md-6 col-sm-8 ">
                                <input placeholder="Intructor" id="intructor" type="text" class="k-textbox" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <label>Duration:</label>
                            </div>
                            <div class="col-md-6 col-sm-8 ">
                                <input placeholder="Duration" id="duration" type="text" class="k-textbox" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="wr_formGroup">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <label>Programme Type:</label>
                            </div>
                            <div class="col-md-6 col-sm-8 ">
                                <div id="cmbProgrammeType" data-cpypst-blsmartcpypaste="cmbProgrammeType"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <label>Evaluation:</label>
                            </div>
                            <div class="col-md-6 col-sm-8 ">
                                <div id="cmbEvaluation" data-cpypst-blsmartcpypaste="cmbEvaluation"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <label>Training Free:</label>
                            </div>
                            <div class="col-md-6 col-sm-8 ">
                                <input placeholder="Training Free" id="trainingFree" type="text" class="k-textbox" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-5">
                                <label>Training Bond:</label>
                            </div>
                            <div class="col-md-6 col-sm-8 ">
                                <input type="checkbox"  id="TrainingBond">
                            </div>
                        </div>
                    </div>
                    <div id="BondHide">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <label>Amount:</label>
                                </div>
                                <div class="col-md-6 col-sm-8 ">
                                    <input placeholder="Amount" id="Amount" type="text" class="k-textbox" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <label>From Date:</label>
                                </div>
                                <div class="col-md-6 col-sm-8 ">
                                    <input placeholder="From Date" id="FromDate" type="text" class="k-textbox" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <label>To Date:</label>
                                </div>
                                <div class="col-md-6 col-sm-8 ">
                                    <input placeholder="To Date" id="ToDate" type="text" class="k-textbox" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    </div>
    <br style="clear:both" />
    <div class="col-md-12 col-sm-12">
        <div id="TrainingDetailsGrid">

        </div>

    </div>
</div>
