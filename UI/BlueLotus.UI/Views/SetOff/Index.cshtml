@{
    ViewBag.Title = ViewBag.ObjCaptn;
    Layout = "~/Views/Shared/_LayOutWithLatestKendoScript.cshtml";
}
<link rel="stylesheet" href="~/buttncss/style/cssNew.css" type="text/css" />
<div>
    <div>
        @Html.Partial("~/Views/SetOff/FindForm.cshtml")
    </div>
    <div class="k-content clearfix" id="filterCont">
        <div class="col-md-12 control-icons" id="ButtonSet">
            <button class="control-button preview" onclick="LoadDrCrGrid()" data-tooltip="preview"> </button>
            <button class="control-button save" onclick="SaveData() " data-tooltip="Save"> </button>
            <button class="control-button clean" onclick="clearAll() " data-tooltip="clean"> </button>

        </div>
        <div id="HdrPart">
            <div class="col-md-6 col-sm-6">
                <div class="wr_formGroup">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-sm-2">
                                <label>Account :</label>
                            </div>
                            <div class="col-md-9 col-sm-8 ">
                                <input id="cmbAccCd"/>
                                <input id="cmbAccNm"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 col-sm-2">
                                <label>Date :</label>
                            </div>
                            <div class="col-md-4 col-sm-3 ">
                                <input id="Date"/>
                            </div>
                            <div class="col-md-2 col-sm-2">
                                <label>Doc No :</label>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <input id="DocNo" type="text" class="k-textbox"/>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="wr_formGroup">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-sm-1">
                                <label>Trn No :</label>
                            </div>
                            <div class="col-md-3 col-sm-1 ">
                                <input id="TrnNo" type="text" class="k-textbox" readonly="readonly"/>
                            </div>
                            <div class="col-md-2 col-sm-1">
                                <label>Balance :</label>
                            </div>
                            <div class="col-md-3 col-sm-1 ">
                                <input id="Balance" readonly="readonly" placeholder="0.00"/>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-2 col-sm-1">
                                <label>Cr Amount :</label>
                            </div>
                            <div class="col-md-3 col-sm-1 ">
                                <input id="CrAmt" readonly="readonly" placeholder="0.00"/>
                            </div>
                            <div class="col-md-2 col-sm-1">
                                <label>Dr Amount :</label>
                            </div>
                            <div class="col-md-3 col-sm-1 ">
                                <input id="DrAmt" readonly="readonly" placeholder="0.00"/>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br style="clear: both"/>
        <div class="col-md-12 col-sm-12">
            <label><span id="CrdDetails"></span></label>
            <div id="CrGrid">
            </div>
        </div>
        <br style="clear: both"/>
        <div class="col-md-12 col-sm-12">
            <label><span id="DbtDetails"></span></label>
            <div id="DrGrid">
            </div>
        </div>
    </div>
</div>
<script>
    var ObjKy = "@(ViewBag.ObjKy)";
    var urlAccCd = '@Url.Content("~/SetOff/AccCode")';
    var urlAccNm = '@Url.Content("~/SetOff/AccName")';
    var urlDrGrid= '@Url.Content("~/SetOff/DrGridLoad")';
    var urlCrGrid = '@Url.Content("~/SetOff/CrGridLoad")';
    var urlSave = '@Url.Content("~/SetOff/SaveAction")';

</script>
<script src="~/Scripts/HtnScripts/SetOff/SetOff.js"></script>
<script src="~/Scripts/HtnScripts/SetOff/SetOffFind.js"></script>