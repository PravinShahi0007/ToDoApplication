@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_LayOutWithLatestKendoScript.cshtml";
}
    <style>
        /*#body { background-image: url(data:image/png;base64,);}*/
        .error-template {padding: 40px 15px;text-align: center; margin: 5% auto;}
        .error-template h2, .error-template h1 {font-weight: 400;}
        .error-actions {margin-top:15px;margin-bottom:15px;}
        .error-details{font-size:16px;}
        .error-actions .btn { margin-right:10px; margin-top:10px; padding-left:20px; padding-right:20px; border-radius: 40px; }

    </style>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="error-template">
                    <img src="~/Content/icons/404.png"/>
                    <h1>
                        Oops!
                    </h1>
                    <h2>
                       Page Not Found
                    </h2>
                    <div class="error-details">
                        The link you clicked may be broken or the page may have been removed.
                    </div>
                    <div class="m-t-20 error-actions">
                        <a href="#" onclick="window.history.back();return false;" class="btn btn-info"> <i class="fa fa-arrow-left" aria-hidden="true"></i> &nbsp; GO BACK</a>
                        <a href="#" id="Home" class="btn btn-info"> <i class="fa fa-home" aria-hidden="true"></i> &nbsp; GO HOME</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

 <script>
        $("#Home").click(function () {
            window.location.href = "@Url.Action("Home", "Home")";
        });
    </script>