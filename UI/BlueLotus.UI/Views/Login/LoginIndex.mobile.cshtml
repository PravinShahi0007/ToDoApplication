@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LoginLayout.Mobile.cshtml";
}




 <div id="body_wrapper"style="width:  210px; margin-left:10px auto; height: 100px;  padding-top: 5px;padding-left: 10px; padding-right:10px; background-color:white;margin-top:200px;border:5px solid black;">

        <div id="login_form" style="width:220px;">
           
          
            <table>
                <tbody>
                    <tr  >
                        <td >@Html.Label("Select Company")</td>
                        
                        <td>
                            <div id="company"></div>
                        </td>

                    </tr>

                    <tr>
                        <td></td>
                        <td style="text-align: center;height:20px;margin-left:10px;width:30px; ">
                            
                            <button class="button2" id="ok" onclick="LoginOk()" style="margin-left:2px;" >Ok</button>
                             <button class="button2" id="cancel"style="margin-left:0px;">Cancel</button>
                               </td>
                        <td style="text-align: center;">
                           

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>



<script type="text/javascript">
    $(document).ready(function() {
            
        LoadCombo();
        var height = $(window).height() - 70;
        $("#body").height(height);
    });

    function LoadCombo() {

        $("#company").kendoComboBox({
            dataValueField: "CKy",
            dataTextField: "CNm",
            dataSource: {
                type: "POST",
                transport: {
                    read: '@Url.Action("GetComNm", "Login")'
                }
            },
            filter: "contains",
            suggest: true,
            placeholder: "Select a Company.."
        });
       $("#company").parent().css('width', "300px");
    }

    function LoginOk() {
        if ($("#company").data('kendoComboBox').value() != null) {
            $.ajax({
                url: '@Url.Action("SetCompany", "Login")',
                data: JSON.stringify({ strCompanyKey: $("#company").data('kendoComboBox').value() }),
                contentType: 'application/json; charset=utf-8',
                dataType: "Json",
                type: "POST",
                async: false,
                success: function (result) {
                    window.location = '@Url.Action("Open", "Login")'
                },
                error: function () {
                    return false;
                }
            });
            }
            else {
                alert("Plese Select The Company.");
                return false;
        }
       
        }
</script>

