                <div class="wr_formGroup">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <label>From Date:</label>
                            </div>
                            <div class="col-md-6 col-sm-8 ">
                                <input placeholder="From Date" id="fromDate" type="text" class="k-textbox" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <label>To Date:</label>
                            </div>
                            <div class="col-md-6 col-sm-8 ">
                                <input placeholder="To Date" id="toDate" type="text" class="k-textbox" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
