<div class="form" id="NewForm" style="margin-top:10px; position:relative;">
    <div class="k-content clearfix" id="filterCont">
        <button class="control-button save" onclick="Insert()" title="Save">Save</button>
        <button class="control-button cancel" onclick="Cancel()" title="Cancel"> cancel</button>
    </div>
    <div style="height:30px; background-color:cornflowerblue; margin-top:-8px;"><h4 style="margin-left:30px; color:white;">New Company</h4></div>
    
    <hr style="margin-top:-1px;" />
    <div class="form-row">
        <div style="display:inline-block"><label>Company Code</label></div>  
        <div style="display:inline-block; margin-left:20px;"><input id="CCd" type="text" class="k-textbox" /></div>      
        
    </div>
    <div class="form-row">        
        <div style="display:inline-block"><label>Company Name</label></div>
        <div style="display:inline-block; margin-left:20px;"><input id="CName" type="text" class="k-textbox" /></div>        
    </div>

    <div class="form-row">        
        <div style="display:inline-block"><label>Address</label></div>
        <div style="display:inline-block; margin-left:65px;"><input id="Addrs" type="text" class="k-textbox" /></div>        
    </div>

    <div class="form-row">        
        <div style="display:inline-block"><label>Town</label></div>
        <div style="display:inline-block; margin-left:80px;"><input id="Town" type="text" class="k-textbox" /></div>        
    </div>

    <div class="form-row">        
        <div style="display:inline-block"><label>City</label></div>
        <div style="display:inline-block; margin-left:90px;"><input id="City" type="text" class="k-textbox" /></div>        
    </div>


    <div class="form-row">        
        <div style="display:inline-block"><label>Country</label></div>
        <div style="display:inline-block; margin-left:65px;"><input id="Cntry" type="text" class="k-textbox" /></div>        
    </div>

    <div class="form-row">        
        <div style="display:inline-block"><label>Tel No 1</label></div>
        <div style="display:inline-block; margin-left:65px;"><input id="Tel1" type="text" class="k-textbox" /></div>        
    </div>


    <div class="form-row">        
        <div style="display:inline-block"><label>Tel No 2</label></div>
        <div style="display:inline-block; margin-left:65px;"><input id="Tel2" type="text" class="k-textbox" /></div>        
    </div>

    <div class="form-row">        
        <div style="display:inline-block"><label>Email</label></div>
        <div style="display:inline-block; margin-left:83px;"><input id="Email" type="email" class="k-textbox" /></div>        
    </div>

    <div class="form-row">        
        <div style="display:inline-block"><label>From Company</label></div>
        <div style="display:inline-block; margin-left:24px;"><div id="cmbCompany" data-cpypst-blsmartcpypaste="cmbCompany" style="width:300px;"></div></div>      
    </div>

    <div class="form-row">
        <div style="display:inline-block"><label>Parent Company</label></div>
        <div style="display:inline-block; margin-left:24px;"><div id="cmbParentCompany" data-cpypst-blsmartcpypaste="cmbCompany" style="width:300px;"></div></div>
    </div>

    <div class="form-row">
        <div style="display:inline-block"><label>Is Bank Branch</label></div>
        <div style="display:inline-block; margin-left:33px;"><input id="Is Bank Branch"   type="checkbox" /></div>
    </div>

 
</div>  
